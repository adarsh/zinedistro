#zines.hfeed
  - @zines.each_with_index do |zine, index|
    = div_for zine, :class => "column span-24 hentry" do
      .cover.column.span-4
        = link_to(zine.cover_image_tag,
                  zine_path(zine),
                  class: 'cover_image')
      .meta.column.span-20.last
        .entry-title
          = link_to zine.path, rel: 'bookmark' do
            %h3
              = zine.title
            %h4
              = zine.subtitle
        %h5
          %span.alt
            = I18n.t 'author.attribution'
          %span.author-name
            = zine.author_name_tag
        - if zine.excerpt?
          %section.excerpt.entry-summary
            = simple_format zine.excerpt
  = paginate @zines
